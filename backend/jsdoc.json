{
  "source": {
    "include": ["."], // Indicates the current directory
    "exclude": ["node_modules"], // Continues to exclude node_modules
    "includePattern": ".+\\.js(doc|x)?$", // Includes .js, .jsdoc, or .jsx files
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "recurse": true,
    "destination": "./docs",
    "template": "default"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  }
}
